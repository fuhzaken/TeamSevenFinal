<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add Survey Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <fieldset>
                <h1><%= title %></h1>
            </fieldset>
            <fieldset>
                <legend><b> Survey Details:</b></legend>
                <table>
                    <!-- For Surveyor -->
                    <tr>
                        <td><b>Surveyor:</b></td>
                        <td>
                            <input
                            style="width:500px"
                            class="form-control"
                            id="surveyorResponseTextField"
                            type="text"
                            name="SurveyorResponse"
                            value="<%= survey.Surveyor %>"
                            readonly>
                        </td>
                    </tr>
                    <!-- For Name of the Survey -->
                    <tr>
                        <td><b>Name of the Survey:</b></td>
                        <td>
                            <input
                            type="text"
                            style="width:500px"
                            class="form-control"
                            id="nameResponseTextField"
                            name="NameResponse"
                            value="<%= survey.Name %>"
                            readonly>
                        </td>
                    </tr>
                    <!-- For Description -->
                    <tr>
                        <td><b>Description:</td>
                        <td>
                            <input
                            type="text"
                            style="width:500px"
                            class="form-control"
                            id="descriptionResponseTextField"
                            name="DescriptionResponse"
                            value="<%= survey.Description %>"
                            required
                            readonly>
                        </td>   
                    </tr>
                    <!-- For Publication -->
                    <tr>
                        <td><b>Publication Date:</b></td>
                        <td>
                            <input
                            type="text"
                            style="width:500px"
                            class="form-control"
                            id="publishedResponseTextField"
                            value="<%= survey.Published %>"
                            name="PublishedResponse"
                            required
                            readonly>
                        </td>  
                    </tr>
                    <!-- For the Date Taken a survey -->
                    <tr>
                        <td><b>Date Taken:</b></td>
                        <td><input 
                            type="text" 
                            style="width:500px"
                            class="form-control" 
                            id="dateTakenTextField"
                            placeholder="(Today's Date)"
                            name="DateTaken"                   
                            required 
                            readonly>
                        </td>
                    </tr>
                </table>              
            </fieldset>
            <br>
            <fieldset>
                <legend>Please proceed to the survey</legend>
                <form class="form" method="POST" >                         
                    <table>
                        <div id="tableHeaders">
                            <!-- Table Headers -->
                            <tr>
                                <th>No.</th>
                                <th>Questions</th>
