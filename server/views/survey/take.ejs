                    <!-- Button to submit the Survey -->
                    <button href="/survey-list/done" class="btn btn-primary" type="submit" title="Click to submit response">
                        <i class="fas fa-edit"></i> Submit
                    </button>
                    <!-- Button to cancel the submission of the survey -->
                    <a href="/survey-list" class="btn btn-warning" title="Click to cancel response submission">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </fieldset>
